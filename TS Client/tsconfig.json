{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"outDir": "./dist",
		"allowJs": false,
		"target": "es5",
		//		"inlineSourceMap": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		//"skipLibCheck": true
		//"moduleResolution": "classic",
		"lib": ["dom", "es5", "scripthost", "es2015.promise"]
	},
	"include": ["./src/**/*"],
	"exclude": ["./dist"]
}
